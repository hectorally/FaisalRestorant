<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:src="@drawable/ic_baseline_restore_from_trash_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="Delete"
            android:textColor="@color/greentextviewcolor"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fitsSystemWindows="true"
        android:id="@+id/reclaclik">

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="113dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="15dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp">


            <ImageView
                android:id="@+id/rImageViewplaque"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="6dp"
                android:layout_marginVertical="15dp"
                android:background="#fff"
                android:src="@drawable/add"
                />


            <TextView
                android:id="@+id/TextViewemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#ffffff"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/TextViewame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextViewemail"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:backgroundTint="#ffffff"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/TextViewprovience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextViewame"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:backgroundTint="#ffffff"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</FrameLayout>